<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><% topic.posts.forEach((post) => { %>
        <option value="<%= post %>"><%= post.title %></option>
      <% }) %></h1>
      <a href="/topics/:topicId/posts/:id/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/topics/:topicId/posts/:id/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <h1><% topic.posts.forEach((post) => { %>
        <option value="<%= post %>"><%= post.body %></option>
      <% }) %></h1>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
